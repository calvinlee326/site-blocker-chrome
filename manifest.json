{
  "manifest_version": 3,
  "name": "Website Blocker",
  "description": "Block user-defined websites .",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "declarativeNetRequest"
  ],
  "background": {
    "service_worker": "background.js"
  }
}